<body>
  <br/><br/><br/><br/>
  <div class="container">
    <div class="card">
      <div class="card-header">
        <h3>Titre : <%=@gossip.title%></h3>
      </div>
      <div class="card-body">
        <h4 class="card-title">Contenu : <%=@gossip.content%></h4>
        <hr class="my-4 ">
        <p class="card-text">
          <ul>
            <li>Créé le : <%=@gossip.created_at%></li>
            <li> Gossip n°<%=@gossip.id%></li>
            <li>Auteur : <%=@gossip.user.first_name%> <%=@gossip.user.last_name%></li>
          </ul>
        </p>
      </div>
      <div class="card-footer">
        <a class="btn btn-outline-secondary btn-sm" role="button" <%= link_to "A propos de l'auteur", user_path(@gossip.user.id) %>></a>
      </div>
    </div>
  </div>
  <br/><br/>
  <div class="container text-center">
    <a class="btn btn-primary btn-lg" role="button" <%= link_to "Revenir à l'accueil", root_path %>></a>
  </div>
  <br/><br/><br/><br/>
</body>

